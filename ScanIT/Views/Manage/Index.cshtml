@model ScanIT.Models.IndexViewModel
@{
   
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}
<h2 style="text-align:center;">@ViewBag.Title   @ViewBag.StatusMessage</h2>
<div class="col-md-12 container container_row">
    <div class="layer1" style="        position: relative;
        justify-self: center;
        text-align: center;
        text-align-last: justify;
        z-index: 0">
        <div class="form-group">
            <h4>Change your password</h4>
            <hr />
            <div class="col-md-2 control-label text-nowrap d-table">
                <button class="btn btn-danger">
                    @if (Model.HasPassword)
                    {@Html.ActionLink("Change your password", "ChangePassword")
                }
                else
                { @Html.ActionLink("Create", "SetPassword")
            }
            </button> 
                <div style="        text-align: center;
        display: table-cell;
">
                @Html.ActionLink("Back to Profile", "Index", "Users", null, new { @class = "btn btn-dark" })
            </div>
        </div>
    </div>
</div>
</div>
